<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E9286"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="55dp" >

    <ImageView
        android:id="@+id/waiting_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mascot_state1" />

    <TextView
        android:id="@+id/static_used_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/waiting_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:gravity="center_horizontal"
        android:text="申请已发送，等待反馈..."
        android:textColor="#fff"
        android:textSize="16dp" />

    <Button
        android:id="@+id/return_home"
        style="@style/Btns"
        android:layout_below="@+id/static_used_tips"
        android:layout_marginTop="62dp"
        android:text="返回"
         />

</RelativeLayout>