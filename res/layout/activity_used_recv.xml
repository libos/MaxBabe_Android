<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E9286"
    android:orientation="vertical"
     >

    <ImageView
        android:id="@+id/used_recv_icon"
        style="@style/MascotIcon"
        android:background="@drawable/mascot_state3" />

    <TextView
        android:id="@+id/static_used_recv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/used_recv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="USERNAME\n申请绑定设备"
        android:textColor="#fff"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_recv_agree"
        style="@style/Btns"
        android:layout_below="@id/static_used_recv_tips"
        android:text="同意" />

    <Button
        android:id="@+id/btn_recv_reject"
       style="@style/Btns"
        android:layout_below="@id/btn_recv_agree"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_important"
        android:text="拒绝" />

</RelativeLayout>