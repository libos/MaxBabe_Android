<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="70dp" >

    <TextView
        android:id="@+id/tv_revise_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="修改"
        android:textColor="#fff"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_new_title"
        android:layout_below="@id/tv_revise_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="新"
        android:textColor="#fff"
        android:textSize="18sp" />

    <fragment
        android:id="@+id/birth_revise_new"
        android:name="com.maxtain.bebe.add.BirthFragment"
        android:layout_below="@id/tv_new_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
         />
    
        
    
     <Button
        android:id="@+id/confirm_btn"
        style="@style/RightTextView"
        android:background="@android:color/transparent"
        android:text="确定"
        />

    <Button
        android:id="@+id/cancel_btn"
        style="@style/LeftTextView"
        android:layout_alignBaseline="@+id/confirm_btn"
        android:layout_alignBottom="@+id/confirm_btn"
        android:layout_toLeftOf="@+id/confirm_btn"
        android:text="取消"
        />
    
</RelativeLayout>