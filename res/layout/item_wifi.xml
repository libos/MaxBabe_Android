<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_wifi_lo"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center_vertical"
    android:background="#5DC0D7"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/wifi_rssi"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_list_wifi_level1" />

    <TextView
        android:id="@+id/choose_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/wifi_rssi"
        android:gravity="center_vertical|center_horizontal"
        android:text="Wifi Name"
        android:textSize="16sp"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/choose_wifi"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:text="选择"
        android:textSize="16sp"
        android:textColor="#fff" />

</RelativeLayout>