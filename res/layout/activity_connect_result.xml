<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4BB9D2"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/static_icon_succ"
        style="@style/MascotIcon"
        android:src="@drawable/mascot_state4" />

    <TextView
        android:id="@+id/static_tip"
        style="@style/InfoTextView"
        android:layout_below="@id/static_icon_succ"
        android:text="连接成功" />

    <TextView
        style="@style/InfoTextView"
        android:layout_below="@id/static_tip"
        android:text="设备Bebe已绑定" />

    <Button
        android:id="@+id/enter_app"
        style="@style/Btns"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:text="进入应用" />

</RelativeLayout>