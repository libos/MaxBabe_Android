<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_back"
        style="@style/DirectionIcon"
        android:src="@drawable/icon_back" />

    <TextView
        style="@style/DirectionTextView"
        android:layout_toRightOf="@id/iv_back"
        android:text="@string/account" />

    <LinearLayout
        android:id="@+id/ll_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_back"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_email"
                style="@style/account_text"
                android:text="email" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_username"
                style="@style/account_text"
                android:text="SHOWBIN" />

            <TextView
                style="@style/account_modify"
                android:text="@string/modify" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_sex"
                style="@style/account_text"
                android:text="ç”·" />

            <TextView
                style="@style/account_modify"
                android:text="@string/modify" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_revise_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_revise_password"
                style="@style/account_text"
                android:text="@string/reg_password" />

            <TextView
                style="@style/account_modify"
                android:text="@string/modify" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_revise_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_revise_phone"
                style="@style/account_text"
                android:text="phone" />

            <TextView
                style="@style/account_modify"
                android:text="@string/modify" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_list"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/quit_login"
            android:textColor="#fff" />
    </RelativeLayout>

</RelativeLayout>