        <activity
            android:name="com.maxtain.bebe.setting.ReviseActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.maxtain.bebe.setting.ReviseBirthActivity"
            android:windowSoftInputMode="adjustResize" />
