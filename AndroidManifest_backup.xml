        <activity android:name="com.maxtain.bebe.monitor.MonitorSetActivity" />
        <activity android:name="com.maxtain.bebe.monitor.WearSetActivity" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" >
